# Server Environment Variables
# Copy this file to .env and fill in the values

PORT=3000

# Frontend URL — set to your Vercel deployment URL in production
FRONTEND_URL=https://your-app.vercel.app

# Neon PostgreSQL
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# Clerk — get from https://clerk.com/
CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...

# Google Gemini AI — get from https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key
# Optional: override the default model (default: gemini-2.0-flash)
# GEMINI_MODEL=gemini-2.0-flash

# ClipDrop Image Generation — get from https://clipdrop.co/apis
CLIPDROP_API_KEY=your_clipdrop_api_key

# Cloudinary — get from https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
